<div class="container-fluid p-t">
  <div class="dashhead">
    <div class="dashhead-titles">
      <h6 class="dashhead-subtitle">Contacts</h6>
      <h2 class="dashhead-title">Search Contacts </h2>
    </div>
  </div>
  <div class="col-md-2">
     <form {{action 'queryChanged' on="submit"}} class="form">
        <div class="form-group">
          {{input type="text" value=contact class="form-control" placeholder="search contact"}}
        </div>
      </form>
      <form {{action 'queryChanged' on="submit"}} class="form">
        <div class="form-group">
          {{input type="text" value=step class="form-control" placeholder="search step"}}
        </div>
      </form>
  </div>
  <div class="col-md-10">
    <div class="clearfix">
      {{page-numbers content=model class="pull-right"}}
      <div class="statcard p-a m-b">
        <span class="h3 statcard-number">
          {{format-number model.meta.total-count format=",0"}}
        </span>
          <span class="statcard-desc text-mute">contact(s)</span>
      </div>
    </div>
  <div class="table-full">
    <div class="table-responsive">
      <table class="table" data-sort="table">
        <thead>
          <tr>
            <th class="header">Reference</th>
            <th class="header headerSortDown">Customer name</th>
            <th class="header">Email</th>
            <th class="header">Step</th>
            <th class="header">L1 MTTB Coach</th>
            <th class="header">L2 MTTB Coach</th>
          </tr>
        </thead>
        <tbody>
          {{#unless contacts.length}}
            <div class="m-a-1">
              Your search returned no result
            </div>
            {{else}}
              {{#each contacts as |contact|}}
                <tr>
                  <td>{{link-to contact.reference 'contact' contact}}</td>
                  <td>{{contact.name}}</td>
                  <td>{{contact.email}}</td>
                  <td>{{contact.step}}</td>
                  <td>{{contact.l1MttbCoach}}</td>
                  <td>{{contact.l2MttbCoach}}</td>
                </tr>
              {{/each}}
          {{/unless}}
        </tbody>
      </table>

    </div>
  </div>
  {{outlet}}
  </div>
</div>
