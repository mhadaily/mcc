<div class="search-col">
  <div class="dashhead">
    <h2 class="dashhead-title">Clients</h2>
  </div>
  <form {{action 'queryChanged' on="submit" }} class="form">
    <div class="form-group">
      {{input type="text" value=contact class="form-control" placeholder="Client Name/Email"}}
    </div>
    <div class="form-group">
      {{input type="text" value=step class="form-control" placeholder="Current Step"}}
    </div>
    <div class="form-group">
      {{input type="text" value=l1_mttb_coach class="form-control" placeholder="Business Coach"}}
    </div>
    <div class="form-group">
      {{input type="text" value=l2_mttb_coach class="form-control" placeholder="Senior Business Coach"}}
    </div>
    <button type="submit" class="btn btn-block btn-primary">Search</button>
  </form>
</div>
<div class="container-fluid search-panel">
  <div class="col-md-12">
    <div class="clearfix">
      {{page-numbers content=model class="pull-right"}}
      <div class="statcard p-a m-b">
        <span class="h3 statcard-number">
            {{format-number model.meta.total-count format=",0"}}
          </span>
        <span class="statcard-desc text-mute">client(s)</span>
      </div>
    </div>
    <div class="table-full">
      <div class="table-responsive">
        <table class="table table-condensed" data-sort="table">
          <thead>
            <tr>
              <th class="header {{if (eq model.meta.sort-attr-name 'reference') (if (eq model.meta.sort-dir 'asc') 'headerSortDown' 'headerSortUp')}}">
                {{link-to 'Reference' (query-params sort="reference" sortDir=(if (eq model.meta.sort-dir 'desc') 'asc' 'desc'))}}
              </th>
              <th class="header {{if (eq model.meta.sort-attr-name 'first_name') (if (eq model.meta.sort-dir 'asc') 'headerSortDown' 'headerSortUp')}}">
                {{link-to 'Client' (query-params sort="first_name" sortDir=(if (eq model.meta.sort-dir 'desc') 'asc' 'desc'))}}
              </th>
              <th class="header {{if (eq model.meta.sort-attr-name 'email') (if (eq model.meta.sort-dir 'asc') 'headerSortDown' 'headerSortUp')}}">
                {{link-to 'Email' (query-params sort="email" sortDir=(if (eq model.meta.sort-dir 'desc') 'asc' 'desc'))}}
              </th>
              <th class="header {{if (eq model.meta.sort-attr-name 'step') (if (eq model.meta.sort-dir 'asc') 'headerSortDown' 'headerSortUp')}}">
                {{link-to 'Step' (query-params sort="step" sortDir=(if (eq model.meta.sort-dir 'desc') 'asc' 'desc'))}}
              </th>
              <th class="header {{if (eq model.meta.sort-attr-name 'l1_mttb_coach') (if (eq model.meta.sort-dir 'asc') 'headerSortDown' 'headerSortUp')}}">
                {{link-to 'Business Coach' (query-params sort="l1_mttb_coach" sortDir=(if (eq model.meta.sort-dir 'desc') 'asc' 'desc'))}}
              </th>
              <th class="header {{if (eq model.meta.sort-attr-name 'l2_mttb_coach') (if (eq model.meta.sort-dir 'asc') 'headerSortDown' 'headerSortUp')}}">
                {{link-to 'Senior Business Coach' (query-params sort="l2_mttb_coach" sortDir=(if (eq model.meta.sort-dir 'desc') 'asc' 'desc'))}}
              </th>
            </tr>
          </thead>
          {{#if model.loading}} loading {{else}}
          <tbody>
            {{#unless model.length}}
            <div class="m-a-1">
              Your search returned no result
            </div>
            {{else}} {{#each model as |contact|}}
            <tr>
              <td>{{ contact.reference}}</td>
              <td>{{link-to contact.name 'contact' contact}}</td>
              <td>{{contact.email}}</td>
              <td align="center" class="{{unless contact.step 'text-danger'}}">{{or contact.step 0}}</td>
              <td>{{contact.l1MttbCoach}}</td>
              <td>{{contact.l2MttbCoach}}</td>
            </tr>
            {{/each}} {{/unless}}
          </tbody>
          {{/if}}
        </table>
      </div>
    </div>
  </div>
</div>
{{outlet}}
