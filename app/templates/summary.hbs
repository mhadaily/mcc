{{#if task}}
  <div class="hr-divider m-y">
    <h3 class="hr-divider-content hr-divider-heading">Call&nbsp;</h3>
  </div>
  <dl>
    <dt>Owner:</dt>
    <dd>{{model.user.name}}&nbsp;</dd>
    <dt>Date Due:</dt>
    <dd>{{moment-format task.dateDue}}&nbsp;</dd>
    <dt>Subject:</dt>
    <dd>{{task.subject}}&nbsp;</dd>
    <dt>Client:</dt>
    <dd>{{task.contact.name}}&nbsp;{{link-to '(Link to Client)' 'contact' task.contact}}</dd>
    <dt>Step:</dt>
    <dd>{{or task.contact.step 0}}&nbsp;</dd>
    {{#if task.contact.mttbStepUncontactable}}
      <dt>Step: Uncontactable:</dt>
      <dd>{{task.contact.mttbStepUncontactable}}&nbsp;</dd>
    {{/if}}
    <dt>Status:</dt>
    <dd>{{task.status}}&nbsp;</dd>
    <dt>Outcome:</dt>
    <dd>{{task.outcome}}&nbsp;</dd>
    <dt>Reference:</dt>
    <dd>{{task.reference}}&nbsp;</dd>
  </dl>
{{/if}}
<div class="hr-divider m-y">
  <h3 class="hr-divider-content hr-divider-heading">Client&nbsp;</h3>
</div>
{{#if task}}
  <div class="clearfix">
    {{link-to 'Edit Contact' (query-params contactrf=contact.id) tagName="button"
              class="btn btn-sm btn-primary pull-right"}}
    {{#if contactrf}}
      {{to-elsewhere named='modal'
                     send=(hash body=(component 'contact-modal' contact=contact update=(action 'updateClient') dismiss=(action (mut contactrf) null)) onOutsideClick=(action (mut contactrf) null)) }}
    {{/if}}
  </div>
{{/if}}
<dl>
  <dt>Reference:</dt>
  <dd>{{contact.reference}}<a target="_blank" href="https://app.ontraport.com/#!/contact/edit&id={{contact.reference}}">
    (Link to OAP)</a></dd>
  <dt>Name:</dt>
  <dd>{{contact.name}}&nbsp;{{link-to '(Link to Client)' 'contact' contact}}</dd>
  {{#if contact.mttbStepUncontactable}}
    <dt>Step Uncontactable:</dt>
    <dd><strong>{{contact.mttbStepUncontactable}}</strong>&nbsp;</dd>
  {{/if}}
  <dt>Email:</dt>
  <dd>{{contact.email}}&nbsp;</dd>
  <dt>Home Phone:</dt>
  <dd>{{contact.homePhone}}&nbsp;</dd>
  <dt>Cell Phone:</dt>
  <dd>{{contact.cellPhone}}&nbsp;</dd>
  <dt>Office Phone:</dt>
  <dd>{{contact.officePhone}}&nbsp;</dd>
  <dt>Skype ID:</dt>
  <dd>{{contact.skypeId}}&nbsp;</dd>
  <dt>Address:</dt>
  <dd>{{contact.address}}&nbsp;</dd>
  <dt>Address2:</dt>
  <dd>{{contact.address_2}}&nbsp;</dd>
  <dt>City:</dt>
  <dd>{{contact.city}}&nbsp;</dd>
  <dt>ZipCode/PostalCode</dt>
  <dd>{{contact.zipCode}}&nbsp;</dd>
  <dt>State:</dt>
  <dd>{{contact.state}}&nbsp;</dd>
  <dt>Country:</dt>
  <dd>{{contact.country}}&nbsp;</dd>
  <dt>Time Zone:</dt>
  <dd>{{contact.timeZone}}&nbsp;</dd>
  <dt>Last Contact:</dt>
  <dd>{{moment-format contact.contactedAt 'YYYY/MM/DD HH:MM'}}&nbsp;</dd>

</dl>
