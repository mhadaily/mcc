<div class="modal-content modal-sm">
  <div class="modal-header">
    <button type="button" class="close" {{action dismiss}} aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Seach Clients</h4>
  </div>
  <div class="modal-body">
    <div class="row">
      <div class="col-sm-12">
        <form class="form" {{action 'searchNow' contact step home_phone cell_phone skype_id country_or_state on="submit"}}>
          <div class="form-group col-md-6">
            {{input type="text" id='contact' value=contact class="form-control" placeholder="Name/Email/Ref"}}
          </div>
          <div class="form-group col-md-6">
            {{input type="text" id='step' value=step class="form-control" placeholder="Current Step"}}
          </div>
          <div class="form-group col-md-6">
            {{input type="text" id='home_phone' value=home_phone class="form-control" placeholder="Phone Number"}}
          </div>
          <div class="form-group col-md-6">
            {{input type="text" id='cell_phone' value=cell_phone class="form-control" placeholder="Cell Number"}}
          </div>
          <div class="form-group col-md-6">
            {{input type="text" id='skype_id' value=skype_id class="form-control" placeholder="Skype ID"}}
          </div>
          <div class="form-group col-md-6">
            {{input type="text" id='country_or_state' value=country_or_state class="form-control" placeholder="Country or State"}}
          </div>
        </form>
      </div>
    </div>
  </div>
  <div class="modal-footer">
    <button type="button" class="btn btn-default" {{action dismiss}}>Close</button>
    <button type="submit" class="btn btn-primary">Search</button>
  </div>
</div>
