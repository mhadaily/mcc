<div class="modal-content ">
  <div class="modal-header">
    <button type="button" class="close" {{action "dismiss"}} aria-label="Close"><span aria-hidden="true">&times;</span></button>
    <h4 class="modal-title">Complete task</h4>
  </div>
  <div class="modal-body ">
    <form class="form">
      <div class="form-group">
        {{textarea value=noteContentModal class="form-control" rows="6" }}
      </div>
      <div class="form-group">
        <select class="custom-select width100" value=selectedOutcome {{action 'selectOutcome' on='change' }}>
          {{#each task.taskType.outcomes as |item|}}
          <option value={{item}}>{{item}}</option>
          {{/each}}
        </select>
      </div>
      {{!--
      <button type="button" class="btn btn-danger btn-lg" {{action "cancel"}} disabled="true">Cancel Task</button>
      --}}
    </form>
  </div>
  <div class="modal-footer">
    <button type="submit" class="btn btn-success btn-lg" {{action "complete" noteContentModal selectedOutcome}}>Complete Task</button>
    <button type="button" class="btn btn-danger btn-lg" {{action "dismiss"}}>Close</button>
  </div>
</div>
<!-- /.modal-content -->
