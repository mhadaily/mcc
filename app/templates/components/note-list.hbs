<div class="hr-divider m-t m-b">
  <h3 class="hr-divider-content hr-divider-heading">Client History & Notes</h3>
</div>
<div class="table-responsive">
  <div class="position-fixed content-block" style="height:{{blockHeightNote}}px">
    <table class="table" data-sort="table">
      <thead>
        <tr>
          <th class="header {{if (eq reverseSort) 'headerSortDown' 'headerSortUp'}}">
            {{link-to 'Date' invokeAction=(action 'sortButton')}}
          </th>
          <th class="header"> Content </th>
        </tr>
      </thead>
      <tbody>
        {{#each sortedNotes as |note|}}
          <tr>
            <td>{{moment-format note.date}}</td>
            <td>
              <div class="partial-view">{{breakLine note.content}}</div>
            </td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
{{yield}}

