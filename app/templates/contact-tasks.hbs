<div class="hr-divider m-t">
  <h3 class="hr-divider-content hr-divider-heading">Tasks</h3>
</div>
<div class="table-responsive">
  <table class="table" data-sort="table">
    <thead>
      <tr>
        <th class="header headerSortDown">Date</th>
        <th class="header">Subject</th>
        <th class="header">Stats</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks as |task|}}
      <tr>
        <td>{{moment-format task.dateDue}}</td>
        <td>{{#link-to (query-params taskrf=task.id)}} {{task.subject}} {{/link-to}}</td>
        <td>{{task.status}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>
