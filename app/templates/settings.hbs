<div class="container-fluid">
  <div class="row m-t-md">
    <div class="container">
      <div class="col-md-6 col-sm-12">
        <form action="post" name="profile">
          <div class="panel panel-default">
            <div class="panel-heading">Profile</div>
            <div class="panel-body">
              <div class="form-group row">
                <div class="col-sm-3">
                  <label class="control-label">Email</label>
                </div>
                <div class="col-sm-9">
                  {{model.email}}
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-3">
                  <label class="control-label">Name</label>
                </div>
                <div class="col-sm-9">
                  {{model.name}}
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-3">
                  <label class="control-label">Skype ID</label>
                </div>
                <div class="col-sm-9">
                  {{input name='skype_user' value=model.skypeId type="text" class="form-control"}}
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-3">
                  <label class="control-label">Phone</label>
                </div>
                <div class="col-sm-9">
                  {{input name='phone_user' value=model.phone type="text" class="form-control"}}
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-3">
                  <label class="control-label">Calendar</label>
                </div>
                <div class="col-sm-9">
                  {{input name='calendar_user' value=model.calendar type="text" class="form-control"}}
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-3">
                  <label class="control-label">Country</label>
                </div>
                <div class="col-sm-9">
                  {{ember-selectize content=countries selection=valueField optionValuePath="content.value"
                                    value=model.country
                                    optionLabelPath="content.text"
                                    placeholder="Country"}}

                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-3">
                  <label class="control-label">Timezone</label>
                </div>
                <div class="col-sm-9">
                  {{ember-selectize content=timezones selection=valueField optionValuePath="content.value"
                                    value=model.timeZone
                                    optionLabelPath="content.text"
                                    placeholder="TimeZone"}}
                </div>
              </div>
              <div class="panel-footer text-center">
                <button class="btn btn-success" {{action "saveProfile"}}>Save new profile</button>
              </div>
            </div>
          </div>
        </form>

      </div>
      <div class="col-md-6 col-sm-12">
        <form {{action "savePassword" on="submit"}}>
          <div class="panel panel-default">
            <div class="panel-heading">Password</div>
            <div class="panel-body">
              <div class="form-group row">
                <div class="col-sm-3">
                  <label class="control-label">Login</label>
                </div>
                <div class="col-sm-9">
                  {{model.email}}
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-3">
                  <label class="control-label">Password</label>
                </div>
                <div class="col-sm-9">
                  {{input name='password_user' value=passwordFields.password type="password" class="form-control" required=true}}
                </div>
              </div>
              <div class="form-group row">
                <div class="col-sm-3">
                  <label class="control-label">Password Confirmation</label>
                </div>
                <div class="col-sm-9">
                  {{input name='password_confirmation_user' value=passwordFields.passwordConfirmation type="password"
                          class="form-control" required=true}}
                </div>
              </div>
            </div>
            <div class="panel-footer text-center">
              <button class="btn btn-success">Save new Password</button>
            </div>
          </div>
        </form>
      </div>
      <div class="col-md-12">
        <button {{action 'invalidateSession'}} class="btn btn-danger btn-block">Logout</button>
      </div>
    </div>
  </div>
</div>
{{outlet}}
