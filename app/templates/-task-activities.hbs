<div class="tab-content">
  <div id="sales">
    <div class="table-full">
      <div class="hr-divider m-t">
        <h3 class="hr-divider-content hr-divider-heading">  Tasks</h3>
      </div>
      <div class="table-responsive">
        <table class="table" data-sort="table">
          <thead>
            <tr>
              <th class="header headerSortDown">Date</th>
              <th class="header">Subject</th>
              <th class="header">Completed</th>
            </tr>
          </thead>
          <tbody>
            {{#each model.tasks as |task|}}
            <tr>
              <td>{{moment-format task.dateDue}}</td>
              <td>{{link-to task.subject 'task' task}}</td>
              <td>{{and task.dateComplete (moment-format task.dateComplete)}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
  <div id="profit">
    <div class="table-full">
      <div class="hr-divider m-t">
        <h3 class="hr-divider-content hr-divider-heading">Sales</h3>
      </div>
      <div class="table-responsive">
        <table class="table" data-sort="table">
          <thead>
            <tr>
              <th class="header headerSortDown">Date</th>
              <th class="header">Status</th>
              <th class="header">Product</th>
              <th class="header">Amount</th>
            </tr>
          </thead>
          <tbody>
            {{#each model.salesOrders as |salesOrder|}}
            <tr>
              <td>{{moment-format salesOrder.date}}</td>
              <td>{{salesOrder.status}}</td>
              <td>{{salesOrder.product.name}}</td>
              <td align="right">{{salesOrder.amount}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
