<div class="hr-divider m-y">
  <h3 class="hr-divider-content hr-divider-heading">
    Tasks
  </h3>
</div>
<ul class="nav nav-bordered m-y" role="tablist">
  <li class="active" role="presentation">
    <a href="#tasks-due-today" role="tab" data-toggle="tab" aria-controls="tasks-due-today">Due Today</a>
  </li>
  <li role="presentation">
    <a href="#tasks-overdue" role="tab" data-toggle="tab" aria-controls="tasks-overdue">Overdue</a>
  </li>
  <li role="presentation">
    <a href="#tasks-scheduled" role="tab" data-toggle="tab" aria-controls="tasks-scheduled">Scheduled</a>
  </li>
</ul>
<div class="tab-content" style="height:600px;overflow-y:auto;">
  <div role="tabpanel" class="tab-pane active" id="tasks-due-today">
    <div class="table-full">
      <div class="table-responsive">
        <table class="table" data-sort="table">
          <thead>
            <tr>
              <th class="header headerSortDown">Date</th>
              <th class="header">Subject</th>
              <th class="header">Completed</th>
            </tr>
          </thead>
          <tbody>
            {{#each dueTodayTasks as |task|}}
              <tr>
                <td>{{moment-format task.dateDue 'MMM Do YY'}}</td>
                <td>{{link-to task.subject 'task' task}}</td>
                <td>{{and task.dateComplete (moment-format task.dateComplete 'MMM Do YY')}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div role="tabpanel" class="tab-pane" id="tasks-overdue">
    <div class="table-full">
      <div class="table-responsive">
        <table class="table" data-sort="table">
          <thead>
            <tr>
              <th class="header">
                <input type="checkbox" class="select-all" id="selectAll">
              </th>
              <th class="header headerSortDown">Date</th>
              <th class="header">Content</th>
            </tr>
          </thead>
          <tbody>
            {{#each model.contact.notes as |note|}}
              <tr>
                <td>
                  <input type="checkbox" class="select-row">
                </td>
                <td>{{moment-format note.date 'MMM Do YY'}}</td>
                <td>{{note.content}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div role="tabpanel" class="tab-pane" id="tasks-scheduled">
    <div class="table-full">
      <div class="table-responsive">
        <table class="table" data-sort="table">
          <thead>
            <tr>
              <th class="header">
                <input type="checkbox" class="select-all" id="selectAll">
              </th>
              <th class="header headerSortDown">Date</th>
              <th class="header">Product</th>
              <th class="header">Amount</th>
            </tr>
          </thead>
          <tbody>
            {{#each model.contact.salesOrders as |salesOrder|}}
              <tr>
                <td>
                  <input type="checkbox" class="select-row">
                </td>
                <td>{{moment-format salesOrder.date 'MMM Do YY'}}</td>
                <td>{{salesOrder.product.name}}</td>
                <td>{{salesOrder.amount}}</td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
