<div class="container-fluid p-t">
  <div class="dashhead">
    <div class="dashhead-titles">
      <h6 class="dashhead-subtitle">
            {{link-to '<< Contacts' 'contacts'}}
      </h6>
      <h2 class="dashhead-title">CONTACT OAP ID: #{{model.reference}}</h2>
    </div>

    <div class="btn-toolbar dashhead-toolbar">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-7">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h2 class="panel-title">{{model.name}}&nbsp;</h2>
        </div>
        <div class="panel-body">
          <dl>
             <img src="http://placehold.it/65x65" class="img-circle pull-right">
           <dt>Date:</dt>
            <dd>{{moment-format model.date 'MMM Do YY'}}&nbsp;</dd>
            <dt>Date Last Modified:</dt>
            <dd>{{moment-format model.dateLastModified 'MMM Do YY'}}&nbsp;</dd>
            <div class="clearfix"></div>
            <<dt>First Name:</<dt>
            <dd>{{model.firstName}}&nbsp;</dd>
            <dt>Last Name:</dt>
            <dd>{{model.lastName}}&nbsp;</dd>
            <dt>Reference:</dt>
            <dd>{{model.reference}} ({{model.source}})</dd>
            <dt>Email:</dt>
            <dd>{{model.email}}&nbsp;</dd>
            <dt>Step:</dt>
            <dd>
             {{input type="number" value=model.step}}
            {{#link-to (query-params step=model.step) tagName='button' class='btn btn-sm btn-primary'}}
              Change Step
            {{/link-to}}
            </dd>
            <dt>L1: MTTB Coach:</dt>
            <dd>{{model.l1MttbCoach}}&nbsp;</dd>
          </dl>
          <div class="hr-divider m-y-md">
              <ul class="nav nav-pills hr-divider-content hr-divider-nav" role="tablist">
                <li class="active" role="presentation">
                  <a href="#sales" role="tab" data-toggle="tab" aria-controls="sales">Tasks</a>
                </li>
                <li role="presentation">
                  <a href="#inventory" role="tab" data-toggle="tab" aria-controls="inventory">Notes</a>
                </li>
                <li role="presentation">
                  <a href="#profit" role="tab" data-toggle="tab" aria-controls="profit">Sales</a>
                </li>
              </ul>
            </div>
            <div class="tab-content">
              <div role="tabpanel" class="tab-pane active" id="sales">
                <div class="table-full" style="height:400px;overflow-y:auto;">
                  <div class="table-responsive">
                    <table class="table" data-sort="table">
                      <thead>
                        <tr>
                          <th class="header">
                            <input type="checkbox" class="select-all" id="selectAll">
                          </th>
                          <th class="header headerSortDown">Date</th>
                          <th class="header">Subject</th>
                          <th class="header">Completed</th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each model.tasks as |task|}}
                        <tr>
                          <td>
                            <input type="checkbox" class="select-row">
                          </td>
                          <td>{{moment-format task.dateDue 'MMM Do YY'}}</td>
                          <td>{{link-to task.subject 'task' task}}</td>
                          <td>{{and task.dateComplete (moment-format task.dateComplete 'MMM Do YY')}}</td>
                        </tr>
                        {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>

              <div role="tabpanel" class="tab-pane" id="inventory">
                <div class="table-full" style="height:400px;overflow-y:auto;">
                  <div class="table-responsive">
                    <table class="table" data-sort="table">
                      <thead>
                        <tr>
                          <th class="header">
                            <input type="checkbox" class="select-all" id="selectAll">
                          </th>
                          <th class="header headerSortDown">Date</th>
                          <th class="header">Content</th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each model.notes as |note|}}
                        <tr>
                          <td>
                            <input type="checkbox" class="select-row">
                          </td>
                          <td>{{moment-format note.date 'MMM Do YY'}}</td>
                          <td>{{note.content}}</td>
                        </tr>
                        {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>

              <div role="tabpanel" class="tab-pane" id="profit">
                <div class="table-full" style="height:400px;overflow-y:auto;">
                  <div class="table-responsive">
                    <table class="table" data-sort="table">
                      <thead>
                        <tr>
                          <th class="header">
                            <input type="checkbox" class="select-all" id="selectAll">
                          </th>
                          <th class="header headerSortDown">Date</th>
                          <th class="header">Product</th>
                          <th class="header">Amount</th>
                        </tr>
                      </thead>
                      <tbody>
                        {{#each model.salesOrders as |salesOrder|}}
                        <tr>
                          <td>
                            <input type="checkbox" class="select-row">
                          </td>
                          <td>{{moment-format salesOrder.date 'MMM Do YY'}}</td>
                          <td>{{salesOrder.product.name}}</td>
                          <td>{{salesOrder.amount}}</td>
                        </tr>
                        {{/each}}
                      </tbody>
                    </table>
                  </div>
                </div>
              </div>
            </div>

        </div>
      </div>
    </div>
    <div class="col-sm-5">
    <div class="hr-divider m-b">
      <h3 class="hr-divider-content hr-divider-heading">Contact State</h3>
    </div>
    <dl class="m-b">

    </dl>
    <pre style="height:230px;overflow:auto;">{{{model.details}}}</pre>

      <div class="hr-divider m-t m-b">
        <h3 class="hr-divider-content hr-divider-heading">Quick Note</h3>
      </div>
      <form class="form" {{action "newNote" on="submit"}}>
        <div class="form-group">
         {{textarea value=noteContent class="form-control" rows="8"}}
        </div>
        <div class="form-group">
          <button class="btn btn-success btn-block" type="submit">Save</button>
        </div>
      </form>
    </div>
  </div>
</div>
{{outlet}}


