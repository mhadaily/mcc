<div class="container p-t-lg">
  <div class="dashhead">
    <div class="dashhead-titles">
      <h6 class="dashhead-subtitle">Tasks</h6>
      <h2 class="dashhead-title">Search Tasks</h2>
    </div>

    <div class="btn-toolbar dashhead-toolbar">
      <div class="btn-toolbar-item input-with-icon">
        <input type="text" value="01/01/15 - 01/08/15" class="form-control" data-provide="datepicker">
        <span class="icon icon-calendar"></span>
      </div>
    </div>
  </div>
  <div class="flextable">
    <div class="flextable-item">
      <form class="form-inline">
        <div class="form-group">
          {{bootstrap-datepicker value=date_due format='yyyy-mm-dd' class="form-control" placeholder="due date (from)"}}
        </div>
      </form>
    </div>
    <div class="flextable-item">
      <form class="form-inline">
        <div class="form-group">
          {{bootstrap-datepicker value=date_due format='yyyy-mm-dd' class="form-control" placeholder="due date (to)"}}
        </div>
      </form>
    </div>
    <div class="flextable-item">
      <form {{action 'queryChanged' on="submit"}} class="form-inline">
        <div class="form-group">
          {{input type="text" value=contact class="form-control" placeholder="search contact"}}
        </div>
      </form>
    </div>
    <div class="flextable-item">
      <form {{action 'queryChanged' on="submit"}} class="form-inline">
        <div class="form-group">
          {{input type="text" value=subject class="form-control" placeholder="search subject"}}
        </div>
      </form>
    </div>
    <div class="flextable-item">
      <form {{action 'queryChanged' on="submit"}} class="form-inline">
        <div class="form-group">
          {{input type="text" value=step class="form-control" placeholder="search step"}}
        </div>
      </form>
    </div>
  </div>
  <div class="text-center">
    <ul class="pagination">
      <li>
        <a href="#" aria-label="Previous" {{action "prevPage"}}>
          <span aria-hidden="true">«</span>
        </a>
      </li>
      {{!--    <li class="active">{{link-to "1" "tasks"}}</li>
      <li>{{link-to "2" "tasks"}}</li>
      <li>{{link-to "3" "tasks"}}</li>
      <li>{{link-to "4" "tasks"}}</li>
      <li>{{link-to "5" "tasks"}}</li> --}}
      <li>
        <a href="#" aria-label="Next" {{action "nextPage"}}>
          <span aria-hidden="true">»</span>
        </a>
      </li>
    </ul>
  </div>
  <div class="table-full">
    <div class="table-responsive">
      <table class="table" data-sort="table">
        <thead>
          <tr>
            <th class="header">
              <input type="checkbox" class="select-all" id="selectAll">
            </th>
            <th class="header headerSortDown">Due</th>
            <th class="header">Contact</th>
            <th class="header">Subject</th>
            <th class="header">Completed</th>
            <th class="header">Step</th>
          </tr>
        </thead>
        <tbody>
          {{#unless tasks.length}}
            <div class="m-a-1">
              Your search returned no result
            </div>
            {{else}}
              {{#each tasks as |task|}}
                <tr>
                  <td>
                    <input type="checkbox" class="select-row">
                  </td>
                  <td>{{moment-format task.dateDue "MMM Do YY"}}</td>
                  <td>{{task.contact.name}}</td>
                  <td>{{link-to task.subject 'task' task}}</td>
                  <td>{{and task.dateComplete (moment-format task.dateComplete "MMM Do YY")}}</td>
                  <td>{{task.stepNum}}</td>
                </tr>
              {{/each}}
          {{/unless}}
        </tbody>
      </table>
    </div>
  </div>
  {{outlet}}

</div>
{{outlet}}
