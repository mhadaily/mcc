<div class="container-fluid p-t">
  <div class="dashhead">
    <div class="dashhead-titles">
      <h6 class="dashhead-subtitle">Tasks</h6>
      <h2 class="dashhead-title">Search Tasks</h2>
    </div>
  </div>
  <div class="clearfix">
  {{page-numbers content=model class="text-right"}}
  </div>
  <div class="col-md-2">
      <form class="form">
        <div class="form-group">
          {{bootstrap-datepicker value=date_due_from format='yyyy-mm-dd' class="form-control" placeholder="due date (from)"}}
        </div>
      </form>
      <form class="form">
        <div class="form-group">
          {{bootstrap-datepicker value=date_due_to format='yyyy-mm-dd' class="form-control" placeholder="due date (to)"}}
        </div>
      </form>
      <form {{action 'queryChanged' on="submit"}} class="form">
        <div class="form-group">
          {{input type="text" value=contact class="form-control" placeholder="search contact"}}
        </div>
      </form>
      <form {{action 'queryChanged' on="submit"}} class="form">
        <div class="form-group">
          {{input type="text" value=subject class="form-control" placeholder="search subject"}}
        </div>
      </form>

      <form {{action 'queryChanged' on="submit"}} class="form">
        <div class="form-group">
          {{input type="text" value=step class="form-control" placeholder="search step"}}
        </div>
      </form>
  </div>
  <div class="col-md-10">
  <div class="table-full">
    <div class="table-responsive">
      <table class="table" data-sort="table">
        <thead>
          <tr>
            <th class="header headerSortUp">Due</th>
            <th class="header">Assigned</th>
            <th class="header">Contact</th>
            <th class="header">Subject</th>
            <th class="header">Completed</th>
            <th class="header">Step</th>
          </tr>
        </thead>
        <tbody>
          {{#unless tasks.length}}
            <div class="m-a-1">
              Your search returned no result
            </div>
            {{else}}
              {{#each tasks as |task|}}
                <tr>
                  <td>{{moment-format task.dateDue}}</td>
                  <td>{{moment-format task.dateAssigned}}</td>
                  <td>{{task.contact.name}}</td>
                  <td>{{link-to task.subject 'task' task}}</td>
                  <td>{{moment-format task.dateComplete}}</td>
                  <td>{{task.stepNum}}</td>
                </tr>
              {{/each}}
          {{/unless}}
        </tbody>
      </table>
    </div>
  </div>

  {{outlet}}
</div>
</div>
{{outlet}}
