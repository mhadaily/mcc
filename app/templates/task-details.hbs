<div class="hr-divider m-y">
  <h3 class="hr-divider-content hr-divider-heading">Task Details</h3>
</div>
<dl>
  <dt>Date Due:</dt>
  <dd>{{moment-format model.dateDue 'MMM Do YY'}}&nbsp;</dd>
  <dt>Subject:</dt>
  <dd>{{model.subject}}&nbsp;</dd>
  <dt>Client:</dt>
  <dd>{{model.contact.name}}&nbsp;</dd>
  <dt>Step:</dt>
  <dd>{{or model.contact.step 0}}&nbsp;</dd>
  <dt>Time Zone:</dt>
  <dd>{{model.timeZone}}&nbsp;</dd>
  <dt>Status:</dt>
  <dd>{{model.status}}&nbsp;</dd>
</dl>

<pre class="m-t">
{{{model.details}}}
</pre>
