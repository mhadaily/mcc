<div class="modal-header">
  <button {{action dismiss}} type="button" class="close" data-dismiss="modal" aria-label="Close"><span
    aria-hidden="true">&times;</span></button>
  <h4 class="modal-title">{{or contact.name 'unnamed'}}</h4>
</div>
<div class="modal-body modal-lg">
  <form class="form" {{action update state country on='submit'}}>
    <div class="col-md-6">
      <div class="form-group row">
        <div class="col-sm-3">
          <label class="control-label">First Name</label>
        </div>
        <div class="col-sm-9">
          {{input value=contact.firstName type="text" class="form-control"}}
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="form-group row">
        <div class="col-sm-3">
          <label class="control-label">Last Name</label>
        </div>
        <div class="col-sm-9">
          {{input value=contact.lastName type="text" class="form-control"}}
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="form-group row">
        <div class="col-sm-4">
          <label class="control-label">Home Phone</label>
        </div>
        <div class="col-sm-8">
          {{input value=contact.homePhone type="text" class="form-control"}}
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <label class="control-label">Cell Phone</label>
        </div>
        <div class="col-sm-8">
          {{input value=contact.cellPhone type="text" class="form-control"}}
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <label class="control-label">Office Phone</label>
        </div>
        <div class="col-sm-8">
          {{input  value=contact.officePhone type="text" class="form-control"}}
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-4">
          <label class="control-label">Skype ID</label>
        </div>
        <div class="col-sm-8">
          {{input value=contact.skypeId type="text" class="form-control"}}
        </div>
      </div>
    </div>

    <div class="col-md-8">
      <div class="form-group row">
        <div class="col-sm-2">
          <label class="control-label">Address</label>
        </div>
        <div class="col-sm-10">
          {{input value=contact.address type="text" class="form-control"}}
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-2">
          <label class="control-label">Address 2</label>
        </div>
        <div class="col-sm-10">
          {{input value=contact.address_2 type="text" class="form-control"}}
        </div>
      </div>
      <div class="form-group row">
        <div class="col-sm-2">
          <label class="control-label">City</label>
        </div>
        <div class="col-sm-4">
          {{input value=contact.city type="text" class="form-control"}}
        </div>

        <div class="col-sm-2">
          <label class="control-label">ZipCode</label>
        </div>
        <div class="col-sm-4">
          {{input value=contact.zipCode type="text" class="form-control"}}
        </div>
      </div>

      <div class="col-md-6">
        <div class="form-group row">
          <div class="col-sm-3">
            <label class="control-label">State</label>
          </div>
          <div class="col-sm-9">
            {{ember-selectize id="billing_state"
                              content=oapStates
                              optionValuePath="content.value"
                              value=contact.state_code
                              optionLabelPath="content.text"
                              placeholder="State"}}
          </div>
        </div>
      </div>
      <div class="col-md-6">
        <div class="form-group row">
          <div class="col-sm-4">
            <label class="control-label">Country</label>
          </div>
          <div class="col-sm-8">
            {{ember-selectize  id="billing_country"
                               content=oapCountries
                               optionValuePath="content.value"
                               value=contact.country_code
                               optionLabelPath="content.text"
                               placeholder="Country"}}
          </div>
        </div>
      </div>
    </div>

    <div class="modal-actions">
      <button {{action dismiss}} type="button" class="btn-link modal-action" data-dismiss="modal">
        Cancel
      </button>
      <button type="submit" class="btn-link modal-action" data-dismiss="modal">
        <strong>Update</strong>
      </button>
    </div>
  </form>
</div>
{{yield}}

