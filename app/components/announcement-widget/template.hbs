{{#if mjtesting}}
{{#each announceList as |announce|}}
  {{#if (eq announce.channel channel)}}
    <div class="panel-group">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4 class="panel-title">
            <a data-toggle="collapse" href="#ann-{{announce.id}}"> {{announce.id}}: <strong>{{announce.subject}}</strong></a>
          </h4>
        </div>
        <div id="ann-{{announce.id}}" class="panel-collapse collapse">
          <div class="panel-body">
            {{{announce.summary}}}
            <hr>
            {{#if announce.body}}
              <div class="clearfix">
                <div class="col-lg-12 announcement">
                  {{{announce.body}}}
                </div>
              </div>
            {{/if}}
          </div>
          <div class="panel-footer">Updated {{moment-customfmt announce.publish_at}} EST</div>
        </div>
      </div>
    </div>
  {{/if}}
{{/each}}
{{/if}}
<div class="flush">

  {{#each announceList as |announce|}}
    {{#if (eq announce.channel channel)}}
      <div class="h3 m-t-0 text-center">
        <strong>{{announce.subject}} <a {{action 'pageRefresh'}}><span class="icon icon-cycle"></span></a></strong>
      </div>
      <div class="clearfix">
        <div class="clearfix">
          <div class="col-lg-12 announcement">
            {{{announce.summary}}}
          </div>
        </div>
        {{#if announce.body}}
          <div class="clearfix" style="background-color: #f2c900; font-size: smaller;">
            <div class="col-lg-12 announcement">
              {{{announce.body}}}

            </div>
          </div>
        {{/if}}
      </div>
      <!--<small> Updated {{moment-customfmt announce.publish_at}} EST</small>-->
    {{/if}}
  {{/each}}
</div>
{{yield}}
