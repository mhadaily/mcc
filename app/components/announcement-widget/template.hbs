<div class="flush">
  <div class="h3 m-t-0 text-center">
    <strong>{{title}} <a {{action 'pageRefresh'}}><span class="icon icon-cycle"></span></a></strong>
  </div>
  {{#each announceList as |announce|}}
    {{#if (eq announce.chanel channel)}}
      <div class="row">
        <div class="col-lg-12 announcement">
          <h3 class="text-center">{{announce.subject}}</h3>
          {{{announce.summary}}}
        </div>
      </div>
      {{#if announce.body}}
        <div class="row" style="background-color: #f2c900; font-size: smaller">
          <div class="col-lg-12 announcement">
            {{{announce.body}}}
          </div>
        </div>
      {{/if}}
      <small> Updated {{moment-customfmt announce.publish_at}} EST</small>
    {{/if}}
  {{/each}}
</div>
{{yield}}
